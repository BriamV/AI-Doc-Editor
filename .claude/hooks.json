{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "timeout": 5,
            "command": "$CLAUDE_PROJECT_DIR/.claude/scripts/session-context.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "timeout": 3,
            "command": "$CLAUDE_PROJECT_DIR/.claude/scripts/inject-context.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "timeout": 8,
            "command": "$CLAUDE_PROJECT_DIR/.claude/scripts/bash-protection.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "timeout": 5,
            "command": "$CLAUDE_PROJECT_DIR/.claude/scripts/pre-edit-checks.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "timeout": 30,
            "command": "$CLAUDE_PROJECT_DIR/.claude/scripts/auto-format.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "timeout": 15,
            "command": "$CLAUDE_PROJECT_DIR/.claude/scripts/quality-metrics.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "timeout": 20,
            "command": "$CLAUDE_PROJECT_DIR/.claude/scripts/security-validation.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "timeout": 10,
            "command": "$CLAUDE_PROJECT_DIR/.claude/scripts/subagent-summary.sh"
          }
        ]
      }
    ]
  }
}
