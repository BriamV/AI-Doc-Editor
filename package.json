{
  "name": "ai-doc-editor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "./",
  "main": "electron/index.cjs",
  "author": "BriamV <velasquezbriam@gmail.com>",
  "description": "Open-source, AI-assisted word processor.",
  "scripts": {
    "//-- SETUP & DEVELOPMENT --//": "",
    "install:frozen": "yarn install --frozen-lockfile",
    "setup": "yarn install:frozen",
    "dev": "yarn run cmd dev",
    "build": "yarn run cmd build",
    "preview": "yarn run cmd preview",
    "//-- TESTING --//": "",
    "test": "yarn run cmd test",
    "test:watch": "yarn run cmd test-watch",
    "test:coverage": "yarn run cmd test-coverage",
    "test:e2e": "yarn run cmd test-e2e",
    "test:e2e:open": "yarn run cmd test-e2e-open",
    "//-- QUALITY & FORMATTING --//": "",
    "qa": "yarn run cmd qa",
    "lint": "yarn run cmd lint",
    "lint:fix": "yarn run cmd lint-fix",
    "format": "yarn run cmd format",
    "format:check": "yarn run cmd format-check",
    "tsc-check": "yarn run cmd tsc-check",
    "//-- QUALITY GATE & SECURITY --//": "",
    "qa-gate": "yarn run cmd qa-gate",
    "security-scan": "yarn run cmd security-scan",
    "audit": "yarn run cmd audit",
    "audit:fix": "yarn run cmd audit-fix",
    "//-- ELECTRON --//": "",
    "electron": "yarn run cmd electron",
    "electron:pack": "yarn run cmd pack",
    "electron:make": "yarn run cmd make-dist",
    "//-- GOVERNANCE & MAINTENANCE --//": "",
    "api-spec": "yarn run cmd api-spec",
    "traceability": "yarn run cmd traceability",
    "traceability:xlsx": "yarn run cmd traceability --format=xlsx",
    "traceability:json": "yarn run cmd traceability --format=json",
    "traceability:md": "yarn run cmd traceability --format=md",
    "governance": "yarn run cmd governance",
    "clean": "yarn run cmd clean",
    "//-- ADDITIONAL BUILD COMMANDS --//": "",
    "build:analyze": "yarn run cmd build-analyze",
    "build:dev": "yarn run cmd build-dev",
    "build:docs": "yarn run cmd build-docs",
    "build:env": "yarn run cmd build-env",
    "//-- DOCKER COMMANDS --//": "",
    "docker:dev": "yarn run cmd docker-dev",
    "docker:prod": "yarn run cmd docker-prod",
    "docker:backend": "yarn run cmd docker-backend",
    "docker:stop": "yarn run cmd docker-stop",
    "docker:logs": "yarn run cmd docker-logs",
    "//-- CLI COMMANDS --//": "",
    "cmd": "node scripts/cli.cjs"
  },
  "build": {
    "appId": "aiDocEditor",
    "productName": "AI Doc Editor",
    "artifactName": "${os}-${name}-${version}-${arch}.${ext}",
    "directories": {
      "output": "release"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "dist/icon-rounded.png"
    },
    "mac": {
      "icon": "dist/icon-rounded.png"
    },
    "linux": {
      "target": [
        "tar.gz",
        "AppImage"
      ],
      "category": "Chat",
      "icon": "dist/icon-rounded.png"
    },
    "win": {
      "target": "NSIS",
      "icon": "dist/icon-rounded.png"
    }
  },
  "dependencies": {
    "@carbon/icons-react": "^11.21.0",
    "@dqbd/tiktoken": "^1.0.2",
    "@lexical/react": "^0.11.1",
    "@react-oauth/google": "^0.9.0",
    "bootstrap-icons": "^1.10.5",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "html2canvas": "^1.4.1",
    "i18next": "^22.4.11",
    "i18next-browser-languagedetector": "^7.0.1",
    "i18next-http-backend": "^2.1.1",
    "idb-keyval": "^6.2.1",
    "jspdf": "^3.0.1",
    "katex": "^0.16.4",
    "lexical": "^0.11.1",
    "lodash": "^4.17.21",
    "match-sorter": "^6.3.1",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-faq-component": "^1.3.4",
    "react-i18next": "^12.2.0",
    "react-markdown": "^8.0.5",
    "react-router-dom": "^6.16.0",
    "react-scroll-to-bottom": "^4.2.0",
    "react-svg": "^16.1.16",
    "rehype-highlight": "^6.0.0",
    "rehype-katex": "^6.0.2",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "uuid": "^9.0.0",
    "yargs": "17.7.2",
    "yjs": "^13.6.6",
    "zustand": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@redocly/cli": "^1.34.3",
    "@stoplight/spectral-cli": "^6.15.0",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/carbon-components-react": "^7.55.5",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.14.194",
    "@types/node": "^20.1.0",
    "@types/papaparse": "^5.3.7",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/react-scroll-to-bottom": "^4.2.0",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.13",
    "concurrently": "^8.0.1",
    "cypress": "^14.5.0",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "electron-builder-squirrel-windows": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "license-checker": "^25.0.1",
    "mega-linter-runner": "^8.8.0",
    "postcss": "^8.4.21",
    "prettier": "^3.6.1",
    "prop-types": "^15.8.1",
    "rimraf": "^4.4.0",
    "tailwindcss": "^3.2.7",
    "ts-jest": "^29.4.0",
    "typescript": "^4.9.3",
    "vite": "^6.3.5",
    "vite-plugin-top-level-await": "^1.3.0",
    "vite-plugin-wasm": "^3.2.2",
    "wait-on": "^7.0.1"
  },
  "optionalDependencies": {
    "@swc/core-darwin-arm64": "^1.4.2",
    "@swc/core-darwin-x64": "^1.4.2",
    "@swc/core-linux-arm-gnueabihf": "^1.4.2",
    "@swc/core-linux-arm64-gnu": "^1.4.2",
    "@swc/core-linux-arm64-musl": "^1.4.2",
    "@swc/core-linux-x64-gnu": "^1.4.2",
    "@swc/core-linux-x64-musl": "^1.4.2",
    "@swc/core-win32-arm64-msvc": "^1.4.2",
    "@swc/core-win32-ia32-msvc": "^1.4.2",
    "@swc/core-win32-x64-msvc": "^1.4.2"
  },
  "resolutions": {
    "minimatch": "^9.0.0"
  }
}
