{
  "name": "ai-doc-editor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "./",
  "main": "electron/index.cjs",
  "author": "BriamV <velasquezbriam@gmail.com>",
  "description": "Open-source, AI-assisted word processor.",
  "scripts": {
    "//-- ⚠️ MIGRATION NOTICE: All commands now use direct execution --//": "scripts/cli.cjs is DEPRECATED - use direct yarn commands",
    "//-- SETUP & DEVELOPMENT --//": "",
    "install:frozen": "yarn install --immutable --check-cache",
    "setup": "yarn install --immutable --check-cache",
    "dev": "node scripts/dev-runner.cjs",
    "build": "vite build",
    "preview": "vite preview",
    "//-- TESTING --//": "",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:frontend": "jest --passWithNoTests",
    "test:backend": "node scripts/multiplatform.cjs tool pytest backend/tests --tb=short --no-header -v",
    "test:backend:watch": "node scripts/multiplatform.cjs tool pytest backend/tests --tb=short --no-header -v -f",
    "test:backend:coverage": "node scripts/multiplatform.cjs tool pytest backend/tests --tb=short --no-header -v --cov=backend --cov-report=term-missing",
    "test:integration": "node scripts/multiplatform.cjs tool pytest backend/tests/integration --tb=short --no-header -v",
    "test:security": "node scripts/multiplatform.cjs tool pytest backend/tests/security --tb=short --no-header -v",
    "test:t12": "node scripts/multiplatform.cjs tool pytest backend/tests/integration/test_complete_t12_integration.py backend/tests/integration/test_week1_week3_integration.py backend/tests/integration/test_week2_week3_integration.py --tb=short --no-header -v",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:playwright": "playwright test",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:report": "playwright show-report",
    "//-- LEGACY CYPRESS TESTS (DEPRECATED) --//": "",
    "test:cypress": "cypress run",
    "test:cypress:open": "cypress open",
    "//-- QUALITY & FORMATTING --//": "",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0 --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "tsc-check": "tsc --noEmit",
    "//-- QUALITY GATE & SECURITY --//": "",
    "qa-gate": "echo '⚠️ DEPRECATED: Use quality-gate instead'",
    "security-scan": "yarn npm audit --all --recursive --no-deprecations --severity high && node scripts/multiplatform.cjs tool semgrep scan --config=auto .",
    "security-scan-full": "yarn npm audit --all --recursive --no-deprecations --severity high && node scripts/multiplatform.cjs tool semgrep scan --config=auto . && yarn lint",
    "quality-gate": "yarn run lint && yarn run tsc-check && yarn run python-quality && yarn run test:frontend && yarn run test:backend && yarn run test:integration && yarn run test:security && yarn run security-scan",
    "//-- PYTHON BACKEND QUALITY --//": "",
    "//-- MULTIPLATFORM ENVIRONMENT --//": "",
    "python:install": "node scripts/multiplatform.cjs python -m pip install -r backend/requirements.txt -r backend/requirements-dev.txt",
    "python:bootstrap": "node scripts/multiplatform.cjs bootstrap",
    "python:dev": "node scripts/multiplatform.cjs dev",
    "python-format": "node scripts/multiplatform.cjs tool black backend --line-length=100",
    "python-format:check": "node scripts/multiplatform.cjs tool black --check --diff --line-length=100 backend",
    "python-lint": "node scripts/multiplatform.cjs tool ruff check backend --output-format=github",
    "python-lint:fix": "node scripts/multiplatform.cjs tool ruff check backend --fix",
    "python-complexity": "node scripts/python-cc-gate.cjs",
    "python-quality": "yarn run python-format:check && yarn run python-lint && yarn run python-complexity",
    "env-validate": "node scripts/multiplatform.cjs validate",
    "env-info": "node scripts/multiplatform.cjs info",
    "audit": "yarn npm audit --all --recursive",
    "audit:fix": "yarn npm audit --all --recursive",
    "audit:critical": "yarn npm audit --all --recursive --severity critical",
    "audit:moderate": "yarn npm audit --all --recursive --severity moderate",
    "//-- ELECTRON --//": "",
    "electron": "electron .",
    "electron:pack": "electron-builder",
    "electron:make": "electron-builder --publish=never",
    "//-- GOVERNANCE & MAINTENANCE --//": "",
    "api-spec": "redocly lint api-spec.yaml",
    "traceability": "echo '⚠️ DEPRECATED: Use /docs-update command instead'",
    "traceability:xlsx": "echo '⚠️ DEPRECATED: Use /docs-update command instead'",
    "traceability:json": "echo '⚠️ DEPRECATED: Use /docs-update command instead'",
    "traceability:md": "echo '⚠️ DEPRECATED: Use /docs-update command instead'",
    "governance": "echo '⚠️ DEPRECATED: Use /adr-create or /issue-generate commands instead'",
    "clean": "rimraf dist build coverage .cache",
    "//-- ADDITIONAL BUILD COMMANDS --//": "",
    "build:analyze": "vite build --mode analyze",
    "build:dev": "vite build --mode development",
    "build:docs": "echo 'Use /docs-update command instead'",
    "build:env": "vite build --mode production",
    "//-- DOCKER COMMANDS --//": "",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.yml up",
    "docker:backend": "docker-compose up api",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "//-- DIRECT COMMANDS --//": "All scripts now use direct commands - no legacy CLI dependency",
    "//-- DEPRECATED LEGACY PATTERNS --//": "yarn run cmd <command> → yarn <command> (54% faster execution)"
  },
  "build": {
    "appId": "aiDocEditor",
    "productName": "AI Doc Editor",
    "artifactName": "${os}-${name}-${version}-${arch}.${ext}",
    "directories": {
      "output": "release"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "dist/icon-rounded.png"
    },
    "mac": {
      "icon": "dist/icon-rounded.png"
    },
    "linux": {
      "target": [
        "tar.gz",
        "AppImage"
      ],
      "category": "Chat",
      "icon": "dist/icon-rounded.png"
    },
    "win": {
      "target": "NSIS",
      "icon": "dist/icon-rounded.png"
    }
  },
