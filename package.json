{
  "name": "ai-doc-editor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "./",
  "main": "electron/index.cjs",
  "author": "BriamV <velasquezbriam@gmail.com>",
  "description": "Open-source, AI-assisted word processor.",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "concurrently -k \"BROWSER=none yarn dev\" \"wait-on tcp:5173 && electron .\"",
    "pack": "yarn build && electron-builder --dir",
    "make": "yarn build && electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:t02-only": "eslint src/components/Auth src/api/auth-api.ts src/hooks/useAuth.ts src/store/auth-slice.ts src/types/auth.ts --ext .ts,.tsx",
    "lint:gradual": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 50",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "traceability": "node scripts/generate-traceability.cjs",
    "api-spec": "npx @redocly/cli lint docs/api-spec/openapi.yml"
  },
  "build": {
    "appId": "aiDocEditor",
    "productName": "AI Doc Editor",
    "artifactName": "${os}-${name}-${version}-${arch}.${ext}",
    "directories": {
      "output": "release"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "dist/icon-rounded.png"
    },
    "mac": {
      "icon": "dist/icon-rounded.png"
    },
    "linux": {
      "target": [
        "tar.gz",
        "AppImage"
      ],
      "category": "Chat",
      "icon": "dist/icon-rounded.png"
    },
    "win": {
      "target": "NSIS",
      "icon": "dist/icon-rounded.png"
    }
  },
  "dependencies": {
    "@carbon/icons-react": "^11.21.0",
    "@dqbd/tiktoken": "^1.0.2",
    "@lexical/react": "^0.11.1",
    "@react-oauth/google": "^0.9.0",
    "bootstrap-icons": "^1.10.5",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^6.6.2",
    "html2canvas": "^1.4.1",
    "i18next": "^22.4.11",
    "i18next-browser-languagedetector": "^7.0.1",
    "i18next-http-backend": "^2.1.1",
    "idb-keyval": "^6.2.1",
    "jspdf": "^3.0.1",
    "katex": "^0.16.4",
    "lexical": "^0.11.1",
    "lodash": "^4.17.21",
    "match-sorter": "^6.3.1",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-faq-component": "^1.3.4",
    "react-i18next": "^12.2.0",
    "react-markdown": "^8.0.5",
    "react-quill": "^2.0.0",
    "react-router-dom": "^6.16.0",
    "react-scroll-to-bottom": "^4.2.0",
    "react-svg": "^16.1.16",
    "rehype-highlight": "^6.0.0",
    "rehype-katex": "^6.0.2",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "uuid": "^9.0.0",
    "yjs": "^13.6.6",
    "zustand": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@redocly/cli": "^1.34.3",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/carbon-components-react": "^7.55.5",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.14.194",
    "@types/node": "^20.1.0",
    "@types/papaparse": "^5.3.7",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/react-scroll-to-bottom": "^4.2.0",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "autoprefixer": "^10.4.13",
    "concurrently": "^8.0.1",
    "cypress": "^14.5.0",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "postcss": "^8.4.21",
    "prettier": "^3.6.1",
    "tailwindcss": "^3.2.7",
    "ts-jest": "^29.4.0",
    "typescript": "^4.9.3",
    "vite": "^6.3.5",
    "vite-plugin-top-level-await": "^1.3.0",
    "vite-plugin-wasm": "^3.2.2",
    "wait-on": "^7.0.1"
  },
  "resolutions": {
    "quill": "2.0.2"
  },
  "optionalDependencies": {
    "@swc/core-darwin-arm64": "^1.4.2",
    "@swc/core-darwin-x64": "^1.4.2",
    "@swc/core-linux-arm-gnueabihf": "^1.4.2",
    "@swc/core-linux-arm64-gnu": "^1.4.2",
    "@swc/core-linux-arm64-musl": "^1.4.2",
    "@swc/core-linux-x64-gnu": "^1.4.2",
    "@swc/core-linux-x64-musl": "^1.4.2",
    "@swc/core-win32-arm64-msvc": "^1.4.2",
    "@swc/core-win32-ia32-msvc": "^1.4.2",
    "@swc/core-win32-x64-msvc": "^1.4.2"
  }
}
