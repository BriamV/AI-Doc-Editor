    "react-scroll-to-bottom": "^4.2.0",
    "react-svg": "^16.1.16",
    "rehype-highlight": "^6.0.0",
    "rehype-katex": "^6.0.2",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "uuid": "^9.0.0",
